<a xlink:href="$url">
    <polygon class="color-$color"
         points="
            $x_middle,$y
            $w,$h
            $x,$h
            "
          onmousemove="showToolTip(evt, '$title', '$text');"
          onmouseout="hideToolTip(evt);"
          style="
          fill: $color;
          opacity: $opacity;
          "
          data-coordinate="$coordinate"
          data-length="$length">
    </polygon>
 </a>
